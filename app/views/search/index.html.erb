<h1>Search Results</h1>
<p>Title: <%= @book[:title] %></p>
<p>Author: <%= @book[:author_name].first %></p>
<p>Publisher: <%= @book[:publisher].join(', ') %></p>

<div class="reviews">
<p>Number of reviews found: <%= @reviews.length %></p>
  <% @reviews.each do |review| %>
    <p><%= review[:summary] %></p>
    <p>Review Publication Date: <%= review[:publication_dt]%></p>
  <% end %>
</div>
